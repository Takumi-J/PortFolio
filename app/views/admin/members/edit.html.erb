<h2><%=@member.name%>さんの会員情報編集</h2>

<br>

<%= form_with model: @member, url: admin_member_path, local: true do |f| %>

<table class="nomal-table">
  <div class="field">
    
    <tr>
    <th>会員ID</th>
    <td><%= @member.id%></td>
    </tr>

    <tr>
    <th><%= f.label :氏名%></th>
    <td><%= f.text_field :name,:placeholder => "まとめもたろう", autofocus: true %></td>
    </tr>

    <tr>
    <th><%= f.label :メールアドレス %></th>
    <td><%= f.email_field :email, :placeholder => "sample@example.com", autocomplete: "email" %></td>
    </tr>
    
    <tr>
    <th><%= f.label :会員ステータス %></th>
    <td><%= f.radio_button :is_deleted, "false" %>有効
    <%= f.radio_button :is_deleted, "true" %>退会</td>
    </tr>

  </div>

</table>

<br>

<div class="row">
 <div class = "col-md-3 offset-md-2">
  <div class = "inlines">
   <div class="actions">
    <%= f.submit('編集内容を保存',class: 'btn btn-success') %>
   </div>
  </div>
 </div>
</div>

<% end %>


